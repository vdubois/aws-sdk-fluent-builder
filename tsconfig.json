{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "declaration": true,
    "lib": [
      "ES2015"
    ],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "e2e/**/*.ts",
    "spec/**/*.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": true
}